
<h1>All Products</h1>
<div class="scroller"
  <% if @products.any? %>
    <ul>
      <% @products.each do |product| %>
        <li><%= link_to product.name, product_path(product) %></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no products yet.</p>
  <% end %>
</div>  
<p class="add"><%= link_to "Add new product", new_product_path %></p>

<p><%= link_to "Back to home", root_path %></p>